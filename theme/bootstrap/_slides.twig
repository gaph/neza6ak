<!-- start slider -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Slider -->
            <div id="main-slider" class="flexslider">
                <ul class="slides">

                    {% setcontent slides = 'slides' %}

                    {% for slide in slides %}
                        <li>
                            <img src="{{ paths.files }}{{ slide.image }}" alt="{{ slide.title }}" title="{{ slide.title }}" />
                        </li>
                    {% endfor %}

                </ul>
            </div>
            <!-- end slider -->
        </div>
    </div>
</div>