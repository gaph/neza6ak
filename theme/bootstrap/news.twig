{% extends 'layout.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ paths.theme }}stylesheets/fancybox/jquery.fancybox.css" rel="stylesheet">
{% endblock %}

{% block slides %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>{{ record.title }}</h1>
                        <p>
                            {{ record.body }}
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <h5>Zadnje novice</h5>
                        {% setcontent items = 'novice/latest/10' %}
                        <ul class="list-group news">
                            {% for item in items %}
                                <li>
                                    <a href="{{ item.link }}">{{ item.title|upper }}</a>,
                                    {{ item.datepublish|date("d.m.Y") }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                {% include '_aside.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ paths.theme }}javascripts/jquery.fancybox.pack.js"></script>
    <script src="{{ paths.theme }}javascripts/jquery.fancybox-media.js"></script>
{% endblock %}