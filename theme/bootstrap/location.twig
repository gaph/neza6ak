{% extends 'layout.twig' %}
{% block slides %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                <div class="row">
                    <div class="col-lg-12">
                        Treningi potekajo v telovadnici OŠ Škofja Loka - Mesto in na atletskem igrišču.
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-4">
                        <address>
                            <strong>OŠ Škofja Loka - Mesto</strong><br>
                            Šolska ulica 1<br>
                            4220, Škofja Loka<br>
                            <abbr title="phone">P:</abbr> 040 919 314
                        </address>
                    </div>

                    <div class="col-md-8">
                        <div id="map-canvas" style="width:100%; height: 300px"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                {% include '_aside.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script>
        function initialize() {
            var mapCanvas = document.getElementById('map-canvas');

            var myLatLng = new google.maps.LatLng(46.168511, 14.305932);

            var mapOptions = {
                center: myLatLng,
                zoom: 15,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(mapCanvas, mapOptions)

            var image = {
                size: new google.maps.Size(100, 100),
                origin: new google.maps.Point(0, 0),
                anchor: new google.maps.Point(17, 34),
                scaledSize: new google.maps.Size(40, 40)
            };

            var beachMarker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                icon: image
            });
        }
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
{% endblock %}