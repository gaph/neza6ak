{% extends 'layout.twig' %}
{% block slides %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                {% for record in records %}
                    <div class="row">
                        <div class="col-lg-12">
                            <h2><a href="{{ record.link }}">{{ record.title|upper }}</a></h2>
                            <p>Objavljeno: {{ record.datepublish|date("d.m.Y") }} </p>
                        </div>
                    </div>
                {% endfor %}

                {{ pager() }}
            </div>
            <div class="col-lg-4">
                {% include '_aside.twig' %}
            </div>
        </div>
    </div>
{% endblock %}