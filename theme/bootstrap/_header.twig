<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {# make sure we always display a proper title: The record's title if there is one, appended with the
    sitename. If there is no title, we append the sitename with the payoff, if there is one. #}
    <title>
    {% if record.title is defined %}{{ record.title|striptags }} | {% endif %}
    {{ app.config.get('general/sitename') }}
    {% if record.title is not defined and app.config.get('general/payoff') %} | {{ app.config.get('general/payoff') }}{% endif %}
    </title>
    {# paths.theme is always a correct path to the current theme. Even if you rename the theme-folder,
    this will keep working. See the documentation on paths: http://docs.bolt.cm/internals#paths #}
    <link rel="stylesheet" href="{{ paths.theme }}stylesheets/bootstrap.min.css">
    <link href="{{ paths.theme }}stylesheets/fancybox/jquery.fancybox.css" rel="stylesheet">

    <link rel="stylesheet" href="{{ paths.theme }}stylesheets/app.css">
    <link rel="stylesheet" href="{{ paths.theme }}stylesheets/flexslider.css">
    <link rel="stylesheet" href="{{ paths.theme }}stylesheets/style.css">

    <link rel="stylesheet" href="{{ paths.theme }}stylesheets/default.css">

    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    {#<!-- A variable from the theme's config: {{ theme.foo }} -->#}
</head>
<body>
<div id="wrapper">
    <header>
        <div class="navbar navbar-fixed-top">
            <div class="container" style="">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img height="60px" src="{{ paths.theme }}/images/logo.png" />
                        <span id="long-title">Športno društvo</span> <span id="short-title">ŠD</span> Neža6ak</a>
                </div>
                <div class="collapse navbar-collapse" style="">
                    <ul class="nav navbar-nav">
                        {{ menu('main', '_sub_menu.twig') }}
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </header>


    <!-- end header -->
    <section id="featured">
        <!-- start slider -->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Slider -->
                    <div id="main-slider" class="flexslider">
                        <ul class="slides">
                            <li>
                                <img src="{{ paths.files }}slides/1.jpg" alt="" />
                            </li>
                            <li>
                                <img src="{{ paths.files }}slides/2.jpg" alt="" />
                            </li>
                            <li>
                                <img src="{{ paths.files }}/slides/3.jpg" alt="" />
                            </li>
                        </ul>
                    </div>
                    <!-- end slider -->
                </div>
            </div>
        </div>
    </section>

